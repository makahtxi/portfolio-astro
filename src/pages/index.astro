---
import Layout from '../layouts/Layout.astro';
import HomeListItem from '../components/HomeListItem';
---
<Layout title="Welcome to Asto.">
	<div class="flex items-center justify-center m-auto w-10/12 bg-white">
		<div class="h-full flex flex-col items-center mt-72 w-6/12">
			<div>
				<h1 class="text-6xl font-semibold mb-2">Hi, I'm Pedro</h1>
				<h3 class="text-2xl font-regular  mb-6">UX Designer & Developer</h3>
				<p class="text-xl font-regular">Website in development</p>
			</div>
		</div>
		<div class="h-full flex flex-col items-center mt-72 w-6/12 gap-0">
			<HomeListItem
			name="PROJECTS"/>
			<HomeListItem
			name="BLOG"/>
			<HomeListItem
			name="ABOUT"/>
			<HomeListItem
			name="CONTACT"/>
		</div>
	</div>
</Layout>

